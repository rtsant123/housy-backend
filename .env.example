# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/housie
# OR use MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/housie?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# OTP Configuration (for SMS service)
OTP_EXPIRY_MINUTES=10
# You can use services like Twilio, MSG91, or Fast2SMS
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.sms-provider.com/send

# File Upload Configuration
MAX_FILE_SIZE=5242880
# 5MB in bytes
UPLOAD_PATH=./uploads

# Admin Configuration
ADMIN_EMAIL=admin@housie.com
ADMIN_PASSWORD=admin123

# Platform Commission
PLATFORM_COMMISSION_PUBLIC=0.20
# 20% for public leagues
PLATFORM_COMMISSION_PRIVATE=0.10
# 10% for private leagues
CREATOR_COMMISSION_PRIVATE=0.10
# 10% for private league creators

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
